<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.avrilla.profile.Bantul">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/calonbantul"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:cardBackgroundColor="@color/ic_launcher_background"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="119dp"
                    android:layout_height="149dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/walikota" />

                <TextView
                    android:id="@+id/visi1"
                    android:layout_width="150dp"
                    android:layout_height="86dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="80dp"
                    android:text="visi : Mensejahterakan Rakyat\nMisi : \n1. Pembangunan Infrastuktur\n2. Pengadaan Lahan Pertanian"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nomor1"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="15dp"
                    android:text="No. 1\nNirina - Gusti"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/calonbantu2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/calonbantul"
                app:cardBackgroundColor="@color/ic_launcher_background"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="119dp"
                    android:layout_height="149dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/walikota" />

                <TextView
                    android:id="@+id/visi2"
                    android:layout_width="150dp"
                    android:layout_height="86dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="80dp"
                    android:text="visi : Mensejahterakan Rakyat\nMisi : \n1. Pembangunan Infrastuktur\n2. Pengadaan Lahan Pertanian"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nomor2"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="75dp"
                    android:layout_marginTop="15dp"
                    android:text="No. 2\nSlamet - Raharjo"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
